
@model Note

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit Note</h2>
    </div>

    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All" class="alert alert-danger"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Title">Note Title</label>
                <input type="text" class="form-control mb-3" asp-for="Title" placeholder="Enter Note Title" required>
                <span asp-validation-for="Title" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CreatedAt">Created At</label>
                <input type="datetime-local" class="form-control mb-3" asp-for="CreatedAt" required>
                <span asp-validation-for="CreatedAt" class="alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Text">Note Content</label>
                <textarea class="form-control mb-3" asp-for="Text" placeholder="Enter Note Content" rows="5" required></textarea>
                <span asp-validation-for="Text" class="alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Tags">Tags</label>
                <input type="text" class="form-control mb-3" asp-for="Tags" placeholder="Enter Tags (comma separated)">
                <span asp-validation-for="Tags" class="alert-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i> Update</button>
        <a asp-controller="Note" asp-action="Index" class="btn btn-lg btn-warning p-2">Back to List</a>
    </form>

</div>

@* Front end validation *@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
